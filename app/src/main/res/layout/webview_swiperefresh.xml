<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--     全屏播放时，视频显示区域 -->
    <FrameLayout
        android:id="@+id/webview_video_fullscreen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/webview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/webview_pull2refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            ptr:ptrMode="both"
            ptr:ptrShowIndicator="false">

            <com.cwebview.CWebView
                android:id="@+id/webview_swipewebview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.cwebview.CWebView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/webview_loadinglayout"
            layout="@layout/webview_pull2refresh_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>