<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brady.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".CApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.brady.corelib.module.webview.SwipeWebviewActivity" />
        <activity android:name="com.brady.corelib.module.webview.PullWebviewActivity" />
        <activity
            android:name="com.brady.corelib.module.fragmentcontainer.ContainerActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>