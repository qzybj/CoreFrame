<resources>
    <style name="style_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_common_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- SingleLine TextView common style-->
    <style name="style_text_common" parent="@style/style_common" >
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Multiline TextView common style-->
    <style name="style_multiline_textview_common" parent="@style/style_text_common">
        <item name="android:gravity">center|left</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- Style EditText common-->
    <style name="style_sigleline_edittext_common" parent="@style/style_text_common">
        <item name="android:ellipsize">end</item>
    </style>

    <!--  Line common horizontal -->
    <style name="style_line_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <!--  Line common vertical -->
    <style name="style_line_common_vertical" parent="@style/style_line_common">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--  Button 通用按钮样式 -->
    <style name="common_btn_default" parent="@style/style_common">
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ListView common style -->
    <style name="style_listview_common" parent="@style/style_common_match">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

</resources>
